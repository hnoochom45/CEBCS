<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--toolbar-->
    <android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/ToobarRegister"/>

<!--content-->
    <ScrollView
        android:padding="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--Content-->
        <LinearLayout
            android:padding="@dimen/padding"
            android:background="#d0ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--ID number Student 13 digit-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!--<icon-->
                <ImageView
                    android:src="@mipmap/ic_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">/</ImageView>
                <!--<Name-->
                <EditText
                    android:textColorHint="@color/yellow"
                    android:hint="ID number Student 13 digit :"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!--ID number Student 7 digit-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!--<icon-->
                <ImageView
                    android:src="@mipmap/ic_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">/</ImageView>
                <!--<Name-->
                <EditText
                    android:textColorHint="@color/yellow"
                    android:hint="ID number Student 7 digit :"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <!--<<Name-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!--<icon-->
                <ImageView
                    android:src="@mipmap/ic_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">/</ImageView>
                <!--<Name-->
                <EditText
                    android:textColorHint="@color/yellow"
                    android:hint="Name :"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />








            </LinearLayout>


            <!--<Surname-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!--<icon-->
                <ImageView
                    android:src="@mipmap/ic_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">/</ImageView>
                <!--<Name-->
                <EditText
                    android:textColorHint="@color/yellow"
                    android:hint="Surname :"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Genner-->
            <TextView
                android:layout_marginLeft="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/h1"
                android:text="Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--male-->
                <RadioButton
                    android:layout_marginLeft="50dp"
                    android:text="Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--famle-->
                <RadioButton
                    android:layout_marginLeft="70dp"
                    android:text="Famle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RadioGroup>



            <!--password-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!--<icon-->
                <ImageView
                    android:src="@mipmap/ic_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">/</ImageView>
                <!--<Name-->
                <EditText
                    android:textColorHint="@color/yellow"
                    android:hint="Password :"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <!--Confirm Password-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!--<icon-->
                <ImageView
                    android:src="@mipmap/ic_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">/</ImageView>
                <!--<Name-->
                <EditText
                    android:textColorHint="@color/yellow"
                    android:hint="Confirm Password :"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!--Show Spinner-->
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.AppCompatSpinner>




        </LinearLayout>


    </ScrollView>

</LinearLayout>